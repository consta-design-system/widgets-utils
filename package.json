{
  "name": "@csssr/gpn-utils",
  "version": "0.2.10",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "lint": "npm-run-all --parallel lint:*",
    "format": "prettier --write '{src,types,scripts}/**/*.{json,{j,t}s{,x},css,}'",
    "lint:ts": "eslint '{src,types}/**/*.ts{,x}'",
    "lint-fix:ts": "eslint '{src,types}/**/*.ts{,x}' --fix",
    "checktypes": "tsc --noEmit --extendedDiagnostics",
    "unit": "TZ=Europe/Moscow jest",
    "test": "npm-run-all --parallel lint checktypes unit",
    "prepublishOnly": "yarn && yarn build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CSSSR/gpn-utils.git"
  },
  "keywords": [
    "utils"
  ],
  "author": "CSSSR",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CSSSR/gpn-utils/issues"
  },
  "homepage": "https://github.com/CSSSR/gpn-utils#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn checktypes",
      "post-checkout": "node node_modules/@csssr/gpn-configs/scripts/checkout-clean.js"
    }
  },
  "lint-staged": {
    "{src,types}/**/*.{ts,tsx}": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ],
    "{src,scripts,config}/**/*.{json,js}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@csssr/gpn-configs": "0.2.18",
    "@types/lodash": "4.14.135",
    "lodash": "4.17.11",
    "npm-run-all": "4.1.5"
  },
  "peerDependencies": {
    "lodash": "^4.17.11"
  },
  "engines": {
    "node": ">=10",
    "yarn": ">=1.19.1"
  }
}
